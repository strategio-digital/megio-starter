includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-deprecation-rules/rules.neon

parameters:
    level: 10
    paths:
        - app
        - bin
        - router
        - rules
        - tests

    # Maximální striktnost - platné pro PHPStan 2.x
    checkClassCaseSensitivity: true
    checkExplicitMixed: true
    checkFunctionNameCase: true
    checkInternalClassCaseSensitivity: true
    checkMissingCallableSignature: true
    checkUninitializedProperties: true
    checkTooWideReturnTypesInProtectedAndPublicMethods: true
    checkPhpDocMethodSignatures: true
    reportMaybes: true
    reportStaticMethodSignatures: true
    reportWrongPhpDocTypeInVarTag: true
    treatPhpDocTypesAsCertain: false

    ignoreErrors:
        - '#^Dynamic call to static method PHPUnit\\Framework\\Assert::#'

        # Remove this or remove code
        - '#Trait App\\User\\Database\\Field\\TUserOwner is used zero times and is not analysed\.#'

services:
    -
        class: App\PhpStan\DisallowNegationRule
        tags:
            - phpstan.rules.rule
    -
        class: App\PhpStan\ExplicitBooleanComparisonRule
        tags:
            - phpstan.rules.rule